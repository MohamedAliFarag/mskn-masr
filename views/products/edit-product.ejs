<%- include('../includes/header.ejs')%>
<%- include('../includes/navbar.ejs')%>

<div class="container mt-5">
        <div class="row">
            <div class="col-md-6 m-auto">
                    <form action="/product/<%=product._id%>?_method=PUT" method="POST">
                        <div class="form-group text-right">
                                <label for="name">عنوان الاعلان</label>
                            <input type="text" class="form-control" name="name" value="<%=product.name%>">
                        </div>
                        <div class="form-group text-right">
                                <label for="image">اضف صور العقار</label>
                            <input type="text" class="form-control" name="image" value="<%=product.image%>">
                        </div>
                        <div class="form-group text-right">
                                <label for="size">مساحه العقار</label>
                            <input type="number" class="form-control" name="size" value="<%=product.size%>">
                        </div>
                        <div class="form-group text-right">
                            <label for="name">عددالغرف</label>
                            <select class="form-control" name="rooms" value="<%=product.rooms%>">
                                <option <%= product.rooms == '1'?'selected':''%>>1</option>
                                <option <%= product.rooms == '2'?'selected':''%>>2</option>
                                <option <%= product.rooms == '3'?'selected':''%>>3</option>
                                <option <%= product.rooms == '4'?'selected':''%>>4</option>
                                <option <%= product.rooms == '5'?'selected':''%>>5</option>
                              </select>
                            </div>
    
                            <div class="form-group text-right">
                                    <label for="name">عدد الحمامات</label>
                                    <select class="form-control" name="bathroom" value="<%=product.bathroom%>">
                                        <option <%= product.bathroom == '1'?'selected':''%>>1</option>
                                        <option <%= product.bathroom == '2'?'selected':''%>>2</option>
                                        <option <%= product.bathroom == '3'?'selected':''%>>3</option>
                                        <option <%= product.bathroom == '4'?'selected':''%>>4</option>
                                        <option <%= product.bathroom == '5'?'selected':''%>>5</option>
                                      </select>
                                    </div>
                                    <div class="form-group text-right">
                                            <label for="price">السعر</label>
                                        <input type="number" class="form-control" name="price" value="<%=product.price%>">
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-success btn-block">تعديل</button>
                                    </div>
                    </form>
            </div>
                
        </div>
    </div>
    




<%- include('../includes/footer.ejs')%>