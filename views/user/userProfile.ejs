<%- include('../includes/header.ejs')%>
<%- include('../includes/navbar.ejs')%>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 m-auto">
            <div class="card shadow mb-5 rounded bg-white">
                    <div class="card-body text-center">
                <h1 class="text-center">بيانات الحساب</h1>
                <i class="fas fa-user-circle fa-10x"></i>
                <h4><%=user.firstName +' '+user.lastName%></h4>
                <h4>0<%=user.mobileNum%></h4>
                    </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
                <div class="card shadow mb-5 rounded bg-white">
                        <div class="card-body text-center">
                    <h1 class="text-center">اعلاناتك</h1>
                    <!-- Cards section-->
<section id="productCards">
        <div class="container text-center pt-3">
            <div class="row">
                <% products.slice().reverse().forEach((product)=>{%>
                <div class="col-lg-4 col-md-6">
                    <div class="card-deck">
                        <div class="card shadow mb-5 bg-white rounded">
                                <img src="<%=product.image%>" class="card-img-top img-fluid">
                                <div class="card-body">
                                  <h5 class="card-title"><%=product.name%></h5>
                                </div>
                                  <ul class="list-group list-group-flush p-0">
                                        <li class="list-group-item">
                                            <div class="row">
                                                <div class="col-md-4">المساحه (<%=product.size%>)</div>
                                                <div class="col-md-4">
                                                        <i class="fas fa-bed fa-2x"></i>
                                                    الغرف (<%=product.rooms%>)</div>
                                                <div class="col-md-4">
                                                        <i class="fas fa-bath fa-2x"></i>
                                                    الحمامات (<%=product.bathroom%>)</div>
                                            </div>
                                        </li>
                                        <li class="list-group-item">
                                            <div class="row">
                                                <div class="col-md-6  d-flex align-self-center">
                                                        <a href="/product/<%=product._id%>" class="btn btn-success btn-md ">معلومات اكثر</a>
                                                </div>
                                                <div class="col-md-6 ">
                                                        <h4>للبيع</h4>
                                                        <h4 class="d-inline"><%=product.price%></h4>
                                                        <h4 class="d-inline">جنيه</h4>
                                                </div>
                                            </div>
                                        </li>
                                  </ul>
                              </div>
                              
                            </div>
                            
                </div>
                <%})%>
            </div>
        </div>
    </section>
                        </div>
                </div>
        </div>
    </div>
</div>



<%- include('../includes/footer.ejs')%>